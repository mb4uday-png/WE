{
  "name": "estimate-manager",
  "version": "1.0.0",
  "description": "Desktop estimate management application",
  "main": "electron/main.js",
  "author": "Your Name",
  "private": true,
  "scripts": {
    "dev": "tauri dev",
    "build": "tauri build",
    "build:vite": "vite build"
  },
  "dependencies": {
    "@tauri-apps/api": "^2.9.1",
    "better-sqlite3": "^12.6.2",
    "exceljs": "^4.4.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "zustand": "^5.0.10"
  },
  "devDependencies": {
    "@tauri-apps/cli": "^2.9.6",
    "@types/better-sqlite3": "^7.6.13",
    "@types/react": "^18.3.27",
    "@types/react-dom": "^18.3.7",
    "@vitejs/plugin-react": "^4.7.0",
    "typescript": "~5.6.2",
    "vite": "^6.4.1",
    "vite-plugin-svgr": "^4.5.0"
  },
  "build": {
    "appId": "com.estimatemanager.app",
    "productName": "Estimate Manager",
    "files": [
      "dist-react/**/*",
      "electron/**/*"
    ],
    "directories": {
      "buildResources": "assets",
      "output": "release"
    },
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "assets/icon.ico"
    },
    "mac": {
      "target": [
        "dmg"
      ],
      "icon": "assets/icon.icns"
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "icon": "assets/icon.png"
    }
  }
}
